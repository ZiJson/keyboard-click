{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "keyboard-click",
  "version": "0.1.0",
  "identifier": "com.keyboard-click.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "keyboard-click",
        "width": 600,
        "height": 400,
        "visible": true,
        "decorations": true,
        "focus": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
