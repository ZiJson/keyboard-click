{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KeyPong",
  "version": "0.1.0",
  "identifier": "com.keypong.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "KeyPong",
        "width": 600,
        "height": 460,
        "visible": true,
        "decorations": false,
        "focus": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "KeyPong",
          "description": "My application capability used for all windows",
          "windows": ["main"],
          "permissions": [
            "core:window:default",
            "core:window:allow-start-dragging",
            "core:event:allow-listen",
            "core:event:default",
            "core:window:allow-minimize",
            "core:window:allow-close",
            "opener:allow-open-url",
            "opener:default"
          ]
        }
      ]
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
