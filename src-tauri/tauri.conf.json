{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KeyPong",
  "version": "1.1.0",
  "identifier": "com.keypong.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "KeyPong",
        "width": 600,
        "height": 460,
        "visible": true,
        "decorations": false,
        "focus": true,
        "resizable": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["resources/**/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
